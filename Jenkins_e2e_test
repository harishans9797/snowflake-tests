pipeline {
    agent any

    tools {
        nodejs 'NodeJS 16'
    }

    triggers {
        cron('H 0 * * *') // Run once a day at midnight
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Test') {
            steps {
                sh 'npm test e2e.test.js'
            }
        }
    }
}
